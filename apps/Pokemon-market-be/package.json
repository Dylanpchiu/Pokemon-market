{
  "name": "@pokemon-market/Pokemon-market-be",
  "version": "0.0.1",
  "private": true,
  "nx": {
    "targets": {
      "build": {
        "executor": "nx:run-commands",
        "options": {
          "command": "webpack-cli build",
          "args": [
            "--node-env=production"
          ]
        },
        "configurations": {
          "development": {
            "args": [
              "--node-env=development"
            ]
          }
        }
      },
      "serve": {
        "continuous": true,
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "@pokemon-market/Pokemon-market-be:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "@pokemon-market/Pokemon-market-be:build:development"
          },
          "production": {
            "buildTarget": "@pokemon-market/Pokemon-market-be:build:production"
          }
        }
      },
      "test": {
        "options": {
          "passWithNoTests": true
        }
      }
    }
  },
  "prisma": {
    "seed": "npx ts-node ./prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.12.0"
  }
}
